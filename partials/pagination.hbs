<nav class="pagination" role="navigation">
    {{#if prev}}
        <a class="newer-posts" href="{{page_url prev}}">&larr; </a>
    {{else}}
        <a class="newer-posts" style="color:#9EABB3">&larr; </a>
    {{/if}}
    <span class="page-number">{{page}} / {{pages}}</span>
    {{#if next}}
        <a class="older-posts" href="{{page_url next}}"> &rarr;</a>
    {{else}}
        <a class="older-posts" style="color:#9EABB3">&rarr; </a>
    {{/if}}
</nav>