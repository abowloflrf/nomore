{{!< default}} 
    <link rel="stylesheet" href="/assets/css/post.css">
    <link rel="stylesheet" href="/assets/css/zoom.css">
    <script>hljs.initHighlightingOnLoad();</script> {{#post}}
    <article class="{{post_class}}">
        <header class="post-header">
            <h1 class="post-title">{{title}}</h1>
            <section class="post-meta">
                <time class="post-date" datetime="{{date format='YYYY-MM-DD'}}">
                    {{date format="MMMM DD, YYYY"}}
                </time>
                {{tags separator=""}}
            </section>
        </header>

        <hr class="post-hr">

        <section class="post-content">
            {{content}}
        </section>

    </article>
    {{/post}}
    <script>
        var post_imgs=$(".post-content img")
        for(var i=post_imgs.length-1;i>=0;i--)
        {
            post_imgs[i].setAttribute("data-action","zoom")
        }
    </script>